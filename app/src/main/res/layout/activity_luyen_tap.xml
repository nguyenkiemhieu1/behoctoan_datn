<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toan3"
    android:orientation="vertical"
    tools:context=".Luyen_tap">

    <Button
        android:id="@+id/btn_back1"
        android:background="@drawable/ic_reply_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="Phần Luyện Lập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button"
            android:id="@+id/btn_tinhnham"
            android:textColor="#fff"
            android:text="Tính nhẩm"
            android:textSize="30dp"
            android:layout_width="200dp"
            android:layout_height="70dp" />

        <Button
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:id="@+id/btn_sosanh"
            android:textColor="#fff"
            android:text="so sánh"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="70dp" />

        <Button
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:id="@+id/btn_tapdem"
            android:textColor="#fff"
            android:text="tập đếm"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="70dp" />

    </LinearLayout>
