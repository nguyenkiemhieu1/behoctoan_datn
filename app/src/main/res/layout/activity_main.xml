<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toan2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="ÔN TRẮC NGHIỆM"
        android:textColor="#000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="250dp"
        android:textColor="#FF5722"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text=" Toán 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:id="@+id/btn_luyentap"
        android:textColor="#fff"
        android:text="Luyện Tập"
        android:textSize="30dp"
        android:layout_width="200dp"
        android:layout_height="70dp" />

    <Button
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:id="@+id/btn_kiemtra"
        android:textColor="#fff"
        android:text="kiểm tra"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/btn_luyentap"
        android:layout_width="200dp"
        android:layout_height="70dp" />

    <Button
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:id="@+id/btn_xemdiem"
        android:textColor="#fff"
        android:text="xem điểm"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/btn_kiemtra"
        android:layout_width="200dp"
        android:layout_height="70dp" />

</LinearLayout>